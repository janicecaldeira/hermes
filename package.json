{
  "name": "hermes",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:prepare": "cross-env-shell NODE_ENV=test \"npm run typeorm -- schema:drop -d ./src/config/typeorm.config.ts && npm run typeorm:run-migrations\"",
    "test:watch": "jest --watch --color",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "typeorm-ts-node-esm",
    "typeorm:run-migrations": "npm run typeorm migration:run -- -d ./src/config/typeorm.config.ts",
    "typeorm:generate-migration": "npm run typeorm -- -d ./src/config/typeorm.config.ts migration:generate ./migrations/$npm_config_name",
    "typeorm:create-migration": "npm run typeorm -- migration:create ./migrations/$npm_config_name",
    "typeorm:revert-migration": "npm run typeorm -- -d ./src/config/typeorm.config.ts migration:revert",
    "typeorm:migration:show": "npm run typeorm -- -d ./src/config/typeorm.config.ts migration:show",
    "docs:build": "npx @compodoc/compodoc -p tsconfig.json -s"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/typeorm": "^9.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.3",
    "dotenv-flow": "^3.2.0",
    "mariadb": "^3.1.1",
    "mysql2": "^3.2.0",
    "nestjs-pino": "^3.1.2",
    "pino-http": "^8.3.3",
    "pino-pretty": "^10.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.12",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.19",
    "@faker-js/faker": "^7.6.0",
    "@golevelup/ts-jest": "^0.3.5",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/dotenv-flow": "^3.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.18",
    "@types/rosie": "^0.0.40",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.3.1",
    "jest-extended": "^3.2.4",
    "jest-serial-runner": "^1.2.1",
    "prettier": "^2.3.2",
    "rosie": "^2.1.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.spec.(t|j)s",
      "!main.ts",
      "!src/typeorm.config.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "./factories/index.ts"
    ],
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/../src/$1"
    },
    "projects": [
      {
        "displayName": "unit tests",
        "testRegex": ".*\\.spec\\.ts$",
        "testPathIgnorePatterns": [
          "/node_modules/",
          ".repository.spec.ts"
        ],
        "rootDir": "src",
        "setupFiles": [
          "./factories/index.ts"
        ],
        "setupFilesAfterEnv": [
          "jest-extended/all"
        ],
        "transform": {
          "^.+\\.(t|j)s$": "ts-jest"
        },
        "moduleNameMapper": {
          "^@/(.*)$": "<rootDir>/../src/$1"
        }
      },
      {
        "displayName": "repository tests",
        "runner": "jest-serial-runner",
        "testRegex": ".*\\.repository\\.spec\\.ts$",
        "rootDir": "src",
        "setupFiles": [
          "./factories/index.ts"
        ],
        "setupFilesAfterEnv": [
          "jest-extended/all"
        ],
        "transform": {
          "^.+\\.(t|j)s$": "ts-jest"
        },
        "moduleNameMapper": {
          "^@/(.*)$": "<rootDir>/../src/$1"
        }
      }
    ]
  }
}
